[Unit]
Description=Change-Driven Development Backend
After=network.target

[Service]
Type=simple
User=mysterx
WorkingDirectory=/home/mysterx/dev/change-driven-dev/backend
Environment="PATH=/home/mysterx/dev/change-driven-dev/.venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/mysterx/dev/change-driven-dev/.venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=on-failure
RestartSec=5s
StandardOutput=append:/home/mysterx/dev/change-driven-dev/logs/backend.log
StandardError=append:/home/mysterx/dev/change-driven-dev/logs/backend-error.log

[Install]
WantedBy=multi-user.target
